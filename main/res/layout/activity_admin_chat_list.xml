<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminChatListActivity"
    android:background="@color/white_greyish">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/admin_side_chat_list"
        android:visibility="visible"
        android:divider="@color/white_greyish"
        android:dividerHeight="10dp">

    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chat_layout_admin"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/white_greyish">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:dividerHeight="10dp"
                android:divider="@color/white_greyish"
                android:id="@+id/chatlist_admin"
                android:layout_above="@id/chat_sender_layout_admin">
            </ListView>
            <LinearLayout
                android:id="@+id/chat_sender_layout_admin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp">
                <ImageView
                    android:id="@+id/chat_send_image_admin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_attach_file_black_24dp"/>
                <EditText
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:textAlignment="viewStart"
                    android:id="@+id/chat_send_edit_text_admin"
                    android:background="@drawable/chatbutton"/>
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginLeft="10dp"
                    app:backgroundTint="@color/newblue"
                    android:id="@+id/send_button_admin"
                    android:src="@drawable/ic_arrow_forward_black_24dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>