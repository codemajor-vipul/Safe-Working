<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dashboardlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:id="@+id/back"/>
        <TextView
            android:id="@+id/dashboardtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            tools:fontFamily="@font/candal"
            android:textColor="#000000"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="#4a4bc2">
        <TextView
            android:id="@+id/details1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            tools:fontFamily="@font/candal"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:paddingTop="5dp"/>
        <TextView
            android:id="@+id/timeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Timeline"
            android:textColor="#FFF"
            android:textSize="20sp"
            tools:fontFamily="@font/candal"
            android:paddingTop="5dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chat"
            android:textColor="#FFF"
            tools:fontFamily="@font/candal"
            android:textSize="20sp"
            android:paddingTop="5dp"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_barshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="#4a4bc2"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/layout_barshow_details1"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#FFF"
            android:layout_weight="1"
            android:layout_margin="0dp"
            />
        <TextView
            android:id="@+id/layout_barshow_timeline"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:layout_margin="0dp"/>
        <TextView
            android:id="@+id/layout_barshow_chat"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:layout_margin="0dp"/>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:id="@+id/detailsdisp"
       android:visibility="visible">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/type"
           android:textSize="20sp"
           android:paddingTop="15dp"
           android:layout_marginLeft="10dp"
           android:fontFamily="@font/bree_serif"
           android:textColor="@color/black"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:text="Type"
           android:fontFamily="@font/bree_serif"
           android:textColor="#a6a3a3"
           android:layout_marginLeft="10dp"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:background="@color/white_greyish"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/name"
           android:textSize="20sp"
           android:paddingTop="15dp"
           android:layout_marginLeft="10dp"
           android:fontFamily="@font/bree_serif"
           android:textColor="@color/black"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:text="Name of accused"
           android:fontFamily="@font/bree_serif"
           android:textColor="#a6a3a3"
           android:layout_marginLeft="10dp"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:background="@color/white_greyish"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/date"
           android:textSize="20sp"
           android:paddingTop="15dp"
           android:layout_marginLeft="10dp"
           android:fontFamily="@font/bree_serif"
           android:textColor="@color/black"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:text="Date of Occurence"
           android:fontFamily="@font/bree_serif"
           android:textColor="#a6a3a3"
           android:layout_marginLeft="10dp"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:background="@color/white_greyish"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/witness1"
           android:textSize="20sp"
           android:paddingTop="15dp"
           android:fontFamily="@font/bree_serif"
           android:layout_marginLeft="10dp"
           android:textColor="@color/black"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:text="Witness"
           android:fontFamily="@font/bree_serif"
           android:textColor="#a6a3a3"
           android:layout_marginLeft="10dp"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:background="@color/white_greyish"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/evidence1"
           android:textSize="20sp"
           android:paddingTop="15dp"
           android:layout_marginLeft="10dp"
           android:fontFamily="@font/bree_serif"
           android:textColor="@color/black"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:text="Evidence"
           android:fontFamily="@font/bree_serif"
           android:textColor="#a6a3a3"
           android:layout_marginLeft="10dp"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:background="@color/white_greyish"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/descript"
           android:textSize="20sp"
           android:paddingTop="15dp"
           android:fontFamily="@font/bree_serif"
           android:layout_marginLeft="10dp"
           android:textColor="@color/black"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:text="Description"
           android:fontFamily="@font/bree_serif"
           android:textColor="#a6a3a3"
           android:layout_marginLeft="10dp"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:background="@color/white_greyish"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/timeline_layout"
        android:background="@color/white_greyish"
        android:visibility="gone">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:dividerHeight="10dp"
            android:divider="@color/white_greyish"
            android:id="@+id/timelinelist">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chat_layout"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/white_greyish">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:dividerHeight="10dp"
            android:divider="@color/white_greyish"
            android:id="@+id/chatlist"
            android:layout_above="@id/chat_sender_layout">
        </ListView>
        <LinearLayout
            android:id="@+id/chat_sender_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/chat_send_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_attach_file_black_24dp"/>
            <EditText
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:id="@+id/chat_send_edit_text"
                android:background="@drawable/chatbutton"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                app:backgroundTint="@color/newblue"
                android:id="@+id/send_button"
                android:src="@drawable/ic_arrow_forward_black_24dp"/>
        </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>