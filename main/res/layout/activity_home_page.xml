<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/dashboardlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="#4a4bc2"
        >

        <TextView
            android:id="@+id/dashboardtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dashboard"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            tools:fontFamily="@font/candal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signout"
            android:layout_weight="1"
            android:text="Sign Out"
            android:textSize="15sp"
            tools:fontFamily="@font/candal"
            android:textColor="#FFFFFF"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_mycomplain_guilty"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="#4a4bc2">
        <TextView
            android:id="@+id/mycomplaints"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Complaints"
            android:textSize="15sp"
            tools:fontFamily="@font/candal"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:paddingTop="5dp"/>
        <TextView
            android:id="@+id/guilty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guilty"
            android:textColor="#FFF"
            tools:fontFamily="@font/candal"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_barshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:background="#4a4bc2"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/layout_barshow_mycomplaints"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#FFF"
            android:layout_weight="1"
            android:layout_margin="0dp"
            />
        <TextView
            android:id="@+id/layout_barshow_guilty"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:layout_margin="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listview_mycomplaint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white_greyish">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:dividerHeight="10dp"
            android:divider="@color/white_greyish"
            android:id="@+id/list"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="end|bottom"
            app:backgroundTint="@color/newblue"
            android:id="@+id/image_button_add"
            android:src="@drawable/add1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listview_guilty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/white_greyish">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listguilty"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:dividerHeight="10dp"
            android:divider="@color/white" />
    </LinearLayout>
</LinearLayout>