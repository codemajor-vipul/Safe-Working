<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main5Activity"
    android:background="@color/white_greyish">
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/main5_linear_layout"
        android:layout_alignParentLeft="true"
        android:background="@drawable/chatshape">
<TextView
    android:id="@+id/main5_message"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingLeft="20dp"
    android:textSize="20sp"
    android:textColor="@color/black"
    android:text="djsdm"/>
        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/main5_image"
            android:visibility="gone"
            />

</LinearLayout>
    <LinearLayout
        android:id="@+id/main5_linear_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/chatshape"
        android:orientation="vertical">
        <TextView
            android:id="@+id/main5_message1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:layout_margin="5dp"
            android:text="djsdm" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/main5_image1"
            android:visibility="gone"
           />

    </LinearLayout>


</RelativeLayout>